# Example 1: Assign dividend payout ratio
dividend = 300
net_income = 1000
payout_ratio = dividend / net_income

# Example 2: Increase EPS growth tracking variable
eps_growth = 10
eps_growth += 2  # New value: 12%

# Example 3: Reduce debt using -=
debt = 1000
debt -= 200  # Repaid 200 crore debt

# Example 4: Increase debt using +=
debt = 1000
debt += 200  # New value: 1200 crore

# Example 1: Check if P/E is reasonable
pe = 18
is_pe_good = pe < 20

# Example 2: Is dividend yield attractive?
div_yield = 3.2
if div_yield >= 3.0:
    print("Good dividend yield")

# Example 3: EPS growth check
eps_2024 = 30
eps_2023 = 25
print(eps_2024 > eps_2023)  # True



# Example 1: Strong fundamentals check
pe = 15
roe = 22
if pe < 20 and roe > 20:
    print("Strong fundamentals")

# Example 2: Debt level warning
de_ratio = 2.8
if de_ratio > 2 or roe < 10:
    print("Financial caution needed")

# Example 3: Exclude low-profit stocks
net_profit = 0
if not net_profit > 0:
    print("Not profitable")

# Example 1: Check if data is missing
eps = None
if eps is None:
    print("EPS data missing")

# Example 2: Confirm object identity
stock1 = "RELIANCE"
stock2 = "RELIANCE"
print(stock1 is stock2)  # True (Python caches small strings)

# Example 3: Avoid wrong data
debt = None
if debt is not None:
    print("Debt value available")

# Example 1: Is stock in Nifty50 list?
nifty50 = ['RELIANCE', 'TCS', 'INFY', 'HDFC']
if 'TCS' in nifty50:
    print("TCS is a Nifty 50 stock")

# Example 2: Exclude banned stocks
banned_stocks = ['YESBANK', 'PNB']
if 'YESBANK' in banned_stocks:
    print("Avoid trading YESBANK")

# Example 3: Check if metric is tracked
metrics = ['EPS', 'PE', 'ROE']
print('ROCE' not in metrics)  # True
